{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.yml",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  }
}
